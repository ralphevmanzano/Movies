<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Movies.Chip.Tab" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bg_color_state</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_state</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="Movies.Chip.Genre" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/lightBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="checkedIcon">@null</item>
        <item name="minTouchTargetSize">0dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Movies.Rounded</item>
    </style>

    <style name="ShapeAppearance.Movies.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Movies.TextAppearance" parent="">
        <item name="android:textColor">@color/darkBrown</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Movies.TextAppearance.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Movies.TextAppearance.Title.Details">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Movies.TextAppearance.Note">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Movies.TextAppearance.Rating">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBrown</item>
    </style>

    <style name="Movies.TextAppearance.Footer">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Movies.TextAppearance.Label">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Movies.TextAppearance.TagLine">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Movies.TextAppearance.Body">
        <item name="android:textSize">16sp</item>
    </style>

</resources>